//register.jade
doctype html
html
	head
		title= title
		meta(name='author',content=authors)
		link(rel='stylesheet',type='text/css',href='css/courriel.css')
		script(type='text/javascript',src='js/courriel.js')
	body
		div(id='register-form')
			h1 Welcome
			hr
			form(name='form-login', action='register_submit', method='post')
				table
					tr
						td(class='bold')
							label(for='text-username') Username:
						td
							input(type='text', name='text-username', value='user1', placeholder='Enter username', required, data-required-msg='Username is required')
					tr
						td(class='bold')
							label(for='text-password') Password:
						td
							input(type='password', name='text-password', value='test', placeholder='Enter password', required, data-required-msg='Password is required')
					tr
						td(class='bold')
							label(for='text-confirm-password') Confirm Password:
						td
							input(type='password', name='text-confirm-password', value='test', placeholder='Confirm password', required, data-required-msg='Please confirm your password')
					tr
						td
						td
							input(class='blue-theme', type='submit', value='Sign Up')
					tr
						td
						td
							a(href='/login') Login
