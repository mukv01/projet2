//outbox.jade
extends layout

block topLeftRegion
	a(class='blue-theme',href='/compose') Compose
	
block bottomLeftRegion
	table
		tr
			td
				a(class='blue-theme',href='/inbox') Inbox
		tr
			td
				a(class='blue-theme active',href='/outbox') Outbox
		tr
			td
				a(class='blue-theme',href='/yp') Yellow Page
				
block bottomRightRegion
	table
		thead
			tr
				td To
				td Date
				td Actions
		tbody
			each record, i in etat.outbox
				tr
					td #{record.to}
					td #{record.date}
					td 
						a(href='/outbox_read_message?to=' + record.to + '&date=' + record.date + '&msg=' + record.msg) Read
						| |  
						a(href='#', onclick='onDeleteMessage(\"' + '/outbox_delete_message?to=' + record.to + '&date=' + record.date + '\")') Delete
									